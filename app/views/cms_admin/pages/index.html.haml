.page-header
  = link_to t('.new_link'), new_cms_admin_site_page_path(@site), :class => 'btn pull-right'
  %h2= t('.title')

- content_for :right_column do
  = render :partial => 'cms_admin/sites/mirrors'

= render :partial => 'cms_admin/categories/index', :object => 'Cms::Page'
= render :partial => 'variations_list'

%ul.list.sortable
  - if ComfortableMexicanSofa.config.variations.present?
    = render :partial => 'variation_index_branch', :collection => @pages  
  - else
    = render :partial => 'index_branch', :collection => @pages
